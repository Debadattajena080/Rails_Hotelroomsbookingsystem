<% if @bookings.count == 0 %>
<div class="container border shadow rounded my-5">
    <h3 class="my-4 text-center">No new bookings pending for approval </h3>
</div>

<% else %>
<div class="border shadow rounded my-5">
    <div class="row">
        <div class="col-md-12">
        <h3 class="my-4 text-center">Pending Bookings</h3>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Phone No. </th>
                <th>Hotel Name</th>
                <th>Room Type</th>
                <th>Check In</th>
                <th>Check Out</th>
                <th>Guests</th>
                <th>Rooms</th>
                <th>Booking Action</th>
            </tr>
            </thead>
            <tbody>
            <% @bookings.each do |booking| %>
                <tr>
                <td><%= booking.guestname %></td>
                <td><%= booking.phone %></td>
                <td><%= booking.room.hotel.hotelname %></td>
                <td><%= booking.room.roomtype.roomtypename %></td>
                <td><%= booking.start_date %></td>
                <td><%= booking.end_date %></td>
                <td class="text-center"><%= booking.guests %></td>
                <td class="text-center"><%= booking.number_of_room %></td>
                <td>
                <%= link_to "Accept", approve_booking_path(booking.id), class:"btn btn-success" %>
                <%= link_to "Reject", reject_booking_path(booking.id), class:"btn btn-danger" %>
                </td> 
                </tr>
            <% end %>
            </tbody>
        </table>
        </div>
    </div>
    <div class="d-flex mb-4" style="justify-content: center; align-item: center">
        <%= paginate @bookings %>
    </div>
</div>
<% end %>