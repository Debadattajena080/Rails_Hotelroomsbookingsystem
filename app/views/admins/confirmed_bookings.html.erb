
    <div class="row">
        <div class="col-md-12 my-5 border rounded shadow">
        <h3 class="my-4 text-center">Confirmed Bookings</h3>
        <table class="table table-striped">
            <thead>
            <tr>
               
                <th>Name</th>
                <th>email</th>
                <th>Phone No. </th>
                <th>Hotel Name</th>
                <th>Room Type</th>
                <th>Check In</th>
                <th>Check Out</th>
                <th>Guests</th>
                <th>Rooms</th>
            </tr>
            </thead>
            <tbody>
            <% @bookings.each do |booking| %>
                <tr>
                <td><%= booking.guestname %></td>
                <td><%= booking.user.email %></td>
                <td><%= booking.phone %></td>
                <td><%= booking.room.hotel.hotelname %></td>
                <td><%= booking.room.roomtype.roomtypename %></td>
                <td><%= booking.start_date %></td>
                <td><%= booking.end_date %></td>
                <td class="text-center"><%= booking.guests %></td>
                <td class="text-center"><%= booking.number_of_room %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
        
        </div>
        
    </div>
    <div class="d-flex mb-4" style="justify-content: center; align-item: center">
        <%= paginate @bookings %>
    </div>
