<div class="col-md-6 col-md-offset-3 border rounded shadow my-5">


<h3 class="d-flex justify-content-center mt-3">Sign Up for Free</h3>
  <%= form_with model: @user, url: sign_up_path do |f| %>
  <%= render "shared/errors", obj: @user %>
  
    <div class="form-group mt-5">
    <%= f.label 'Username' %><br>
    <%= f.text_field :username, class: 'form-control', required: true, placeholder:"Enter your name" %>
    </div>

    <div class="form-group ">
    <%= f.label 'Contact' %><br>
    <%= f.text_field :contact , class: 'form-control', required: true, placeholder: "Enter phone number" %>
    </div>

    <div class="form-group ">
    <%= f.label 'email' %><br>
    <%= f.text_field :email, class: 'form-control', required: true, placeholder: "Enter email address" %>
    </div>

    <div class="form-group ">
    <%= f.label 'password' %><br>
    <%= f.password_field :password, class: 'form-control', required: true, placeholder: "Password"%>
    </div>

    <div class="form-group ">
    <%= f.label 'password_confirmation' %><br>
    <%= f.password_field :password_digest, class: 'form-control', required: true, placeholder: "Confirm password" %>
    </div>

    <div class="form-group mt-4 mb-3">
    <%= f.submit 'SIGN UP', class: "btn btn-primary btn-block" %>
    </div>
    
  <% end %>
  </div>
 
  