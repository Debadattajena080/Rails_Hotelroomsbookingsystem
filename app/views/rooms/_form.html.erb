
<%= render "shared/errors", obj: @room %>

<%= form_with(model: @room) do |form| %>

   <div class="my-3">
    <%= form.label :HotelName %><br>
    <%= form.select(
        :hotel_id,
        options_for_select(@hotels.map { |hotel| [hotel.hotelname, hotel.id] } ,:selected => @room.hotel_id),
        { include_blank: 'Select Hotel' },
        { class: 'form-control' }
    )%>
  </div>


  <div class="my-3">
  <%= form.label :RoomType%>
   <%= form.select(
        :roomtype_id,
        options_for_select(@roomtypes.map { |roomtype| [roomtype.roomtypename, roomtype.id] }, :selected => @room.roomtype_id),
        { include_blank: 'Select RoomType' },
        { class: 'form-control' }
    ) %>
  </div>

   <div class="my-3 ">
    <%= form.label :price %><br>
    <%= form.text_field :price, class: 'form-control'%>
  </div>

  <div class="form-group">
    <% if @room.image.attached? %>
      <%= image_tag @room.image, style: "width: 200px; display: block" %>
    <% end %>
    <%= form.label :image %><br>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="my-3">
    <%= form.submit class: "btn btn-primary btn-block" %>
  </div>
  
<% end %>
