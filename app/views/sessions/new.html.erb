
<div class="col-md-6 col-md-offset-3 border rounded shadow my-5 ">
    <h3 class="d-flex justify-content-center mt-4">Welcome Back!</h3>
  
  <%= form_with url: sign_in_path do |f| %>
  
    <div class="form-group mt-5">
    <%= f.label 'email:'%><br>
    <%= f.text_field :email, id: 'email', class:'form-control', :required => true, placeholder: "Enter Your Email" %>
    </div>

    <div class="form-group ">
    <%= f.label 'password:'%><br>
    <%= f.password_field :password, id: 'password' , class:'form-control', :required => true, placeholder: "Enter Password" %>
    </div>

    <div class="mt-4 mb-2">
    <%= f.submit 'LOG IN', class: "btn btn-primary btn-block" %>
    </div>

    <p class=""> Don't have an account ?  &nbsp <%= link_to 'SIGN UP', sign_up_path %> </p>  
  <% end %>
   
</div>